<!-- Creates a form within a table of all the locations -->
<!-- Values are the location's id which is passed to the modification form -->

<h1> Which location would you like to modify? </h1>
<form action="/modify_location_form_2">
<table>
  <tr>
    <td> ID</td>
    <td>Name</td>
    <td>Address</td>
    <td>Retail</td>
  </tr>
  <% Location.all.each do |x|%>
    <tr>
      <td><input type="radio" name="id" value="<%= x.id%>"></td>
      <td><%= x.name%></td>
      <td><%= x.address %></td>
      <td><%= x.retail%></td>
    </tr>
  <%end%>
</table><br><Br>
<input type="submit"></form>