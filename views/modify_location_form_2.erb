<!-- Creates a Location object from the id passed from the previous form -->
<% x = Location.find(params["id"].to_i)%>

<center><h1>Modify this location and click "submit"<br></h1>

<form action="/location_modified">
<!-- Adds the id as a hidden value when the form is submitted -->  
  <input type="hidden" value="<%= x.id %>" name = "id"><br>

<!-- Creates a form with the fields pre-populated with existing information -->
  Name - 
  <input type="name" name="name" value="<%= x.name %>"><br>
  
  Address - 
  <input type="name" name="address" value="<%= x.address %>"><br>
  
  Retail - 
  <input 
  <% if x.retail == true %> 
    checked 
  <%end%> 
  type="radio" name="retail" value="yes">Yes
  
  <input 
  <% if x.retail == nil %> 
    checked 
  <%end%> 
  type="radio" name="retail" value="no">No<br><br>
  
  <input type="submit">
</form>