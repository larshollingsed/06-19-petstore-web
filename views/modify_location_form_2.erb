<% x = Location.find(params["id"].to_i)%>
<form action="/location_modified">
  Location ID - <input readonly value="<%= x.id %>" name = "id"><br>
  Name - <input type="name" name="name" value="<%= x.name %>"><br>
  Address - <input type="name" name="address" value="<%= x.address %>"><br>
  Retail -   <input <% if x.retail == true %> checked <%end%> type="radio" name="retail" value="yes">Yes
  <input <% if x.retail == nil %> checked <%end%> type="radio" name="retail" value="no">No<br><br>
  <input type="submit">