<!-- Creates a form within a table of all the products -->
<!-- Sends the id of the product to be modified to the next modify product form -->
<h1>Which product would you like to modify?</h1>
<table>
  <tr>
    <td>Name</td>
    <td> Category </td>
    <td> Location</td>
    <td> Cost </td>
    <td> Quantity</td>
  </tr>
  <form action="/modify_product_form_2">
  <% Product.all.each do |x| %>
  <tr>
    <td><input type="radio" name="id" value="<%= x.id %>"><%= x.name%> </td>
    <td> <%= Category.find(x.category_id).type%> </td>
    
    <!-- If user is sent here after trying to delete a location that still -->
    <!-- This will show them which objects are at that location -->
    <td><%if x.location_id == params["location"].to_i%> <b><i> <%end%> <%= Location.find(x.location_id).name%> </td>
    <td> <%= x.cost %> </td>
    <td> <%= x.quantity %></td>
  </tr>
  <%end%>
</table><br><br>

  <input type="submit"></form>